n=5
function Markowitz(n,Σ,μ,R)
m = Model(solver = ClpSolver())
@variable(m,x[1:n] >= 0)
@objective(m, Min, x'*Σ*x)
@constraint(m, x'*ones(n) .== 1)
@constraint(m, μ'*x .== R) # variar o 0.10
solve(m)
# getobjectivevalue(m)
# getvalue(x)    
return(getobjectivevalue(m))
end

